<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
          <% if current_user != user %>
            <% if current_user.pending_friends.include?(user) %>
              <span>(pending)</span>
            <% elsif current_user.friend_requests.include?(user) %>
              <%= link_to "Accept", user_friendship_path(user, id: current_user.id), method: :put, class: "btn"%>
              <%= link_to "Decline", user_friendship_path(user, id: current_user.id), method: :delete, class: "btn" %>
            <% else %>
              <%= link_to 'Send Invitation', user_friendships_path(user), method: :post,class: 'profile-link' %>
            <% end %>
          <% end %>
        </span>
      </li>
    <% end %>
  </ul>
</section>
